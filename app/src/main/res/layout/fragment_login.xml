<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_base"
    android:id="@+id/login_fragment_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/some_id"
    android:clipToOutline="true"
    tools:context=".view.fragment.LoginFragment"
    android:clickable="true">

    <!-- BrandLogo 1 -->
    <View
        android:id="@+id/login_fragment_logo_top"
        android:layout_width="150dp"
        android:layout_height="84dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/brandlogo_1"
        app:layout_constraintLeft_toLeftOf="@id/login_fragment_title_main"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 4 9 -->
    <View
        android:id="@+id/login_fragment_title_main"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="171dp"
        android:background="@drawable/__9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- 5 1 -->
    <View
        android:id="@+id/login_fragment_title_sub"
        android:layout_width="269dp"
        android:layout_height="29dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/__1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/login_fragment_title_sub"
        app:layout_constraintTop_toBottomOf="@id/login_fragment_title_sub"
        app:layout_constraintRight_toRightOf="@id/login_fragment_title_sub"
        app:layout_constraintBottom_toTopOf="@id/login_fragment_logo_bottom">

        <EditText
            android:id="@+id/login_fragment_edit_id"
            style="@style/login_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_1256" />
        <EditText
            android:id="@+id/login_fragment_edit_pw"
            style="@style/login_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_1256"
            android:inputType="textPassword" />
        <Spinner
            android:id="@+id/login_fragment_server"
            style="@style/login_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_1258"/>

        <Button
            android:id="@+id/login_fragment_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:background="@drawable/btn_login"/>
    </LinearLayout>

    <!-- 2 24 -->
    <View
        android:id="@+id/login_fragment_logo_bottom"
        android:layout_width="120dp"
        android:layout_height="42.62dp"
        android:layout_marginBottom="20.38dp"
        android:background="@drawable/__24"
        app:layout_constraintRight_toRightOf="@id/login_fragment_title_main"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>